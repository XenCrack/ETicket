@model Cinema

<div class="row">
    <div class="col-md-12">
        <h2>Yeni Sinema Salonu</h2>
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Create">
                    <div class="form-group">
                        <label class="control-label" asp-for="Logo"></label>
                        <input class="form-control" asp-for="Logo" />
                        <span class="text-danger" asp-validation-for="Logo"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Description"></label>
                        <input class="form-control" asp-for="Description" />
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>